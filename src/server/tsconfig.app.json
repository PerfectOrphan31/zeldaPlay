{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../dist/server",
    "target": "es2018",
    "lib": ["es6"],
    "paths": {
      "@Auth/*": ["app/auth/*"],
      "@Db/*": ["app/db/*"],
      "@DbModel/*": ["app/db/models/*"],
      "@Character/*": ["app/zeldaplay/character/*"],
      "@Decorators/*": ["app/decorators/*"],
      "@Models/*": ["app/models/*"],
      "@Note/*": ["app/zeldaplay/note/*"],
      "@Shared/*": ["app/shared/*"],
      "@Skill/*": ["app/zeldaplay/skill/*"],
      "@Spell/*": ["app/zeldaplay/spell/*"],
      "@User/*": ["app/user/*"],
      "@Weapon/*": ["app/zeldaplay/weapon/*"]
    }
  },
  "include": ["app/**/*.ts", "main.ts"],
  "exclude": ["**/**.spec.ts"]
}
