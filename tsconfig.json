{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es6",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "esnext.asynciterable", "esnext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tabletop-companion/api-interface": ["libs/api-interface/src/index.ts"]
    },
    "strict": true,
    "rootDir": ".",
    "noUnusedLocals": true,
    "pretty": true
  },
  "exclude": ["node_modules", "tmp"]
}
